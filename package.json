{
  "name": "@firelayer/root",
  "version": "0.0.0",
  "private": true,
  "description": "Firelayer - A Firebase Toolkit",
  "license": "MIT",
  "author": "Jo√£o Teixeira <joao@indielayer.com>",
  "workspaces": [
    "lib/*"
  ],
  "scripts": {
    "start": "yarn dev",
    "bootstrap": "yarn --check-files --frozen-lockfile --non-interactive && lerna bootstrap",
    "dev": "yarn build && lerna run --parallel dev",
    "clean": "lerna run --parallel clean",
    "lint": "yarn lint:all .",
    "lint:all": "eslint --cache --cache-location=.cache/eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx,.mjs,.vue --report-unused-disable-directives",
    "reset": "lerna clean --yes && yarn clean",
    "build": "yarn clean && yarn build:core && yarn build:cli",
    "build:core": "cd lib/core && yarn build",
    "build:cli": "cd lib/cli && yarn build",
    "cli:docs": "cd lib/cli && yarn docs",
    "release": "yarn build && HUSKY_SKIP_HOOKS=1 lerna publish",
    "release:alpha": "yarn build && HUSKY_SKIP_HOOKS=1 lerna publish prerelease --preid alpha --dist-tag alpha",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": [
      "yarn lint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">= 10.16.0",
    "yarn": ">= 1.12.0"
  },
  "devDependencies": {
    "@firelayer/eslint-config": "^1.3.2",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lerna": "^3.15.0",
    "lint-staged": "^10.1.1",
    "typescript": "^3.8.2"
  }
}
