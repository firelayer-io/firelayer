{
  "name": "boilerplate",
  "version": "1.0.0-alpha.9",
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "description": "Firelayer Boilerplate",
  "scripts": {
    "start": "yarn dev",
    "build": "firelayer run \"lerna run build\"",
    "dev": "firelayer run \"lerna run dev --parallel\"",
    "bootstrap": "yarn --ignore-engines && lerna bootstrap",
    "reset": "lerna clean --yes && yarn clean",
    "clean": "lerna run --parallel clean",
    "deploy": "yarn build && firebase deploy",
    "www": "firelayer run \"cd app/www && yarn dev\"",
    "functions": "firelayer run \"cd app/functions && yarn dev\""
  },
  "devDependencies": {
    "@firelayer/cli": "^1.0.0-alpha.9",
    "lerna": "^3.20.2"
  }
}
